import java.util.Scanner;
public class Assignment1_Q4B {

	public static void main(String[] args) {
		
		int size,i,j,k;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter size = ");
		size = sc.nextInt();
		
		for(i=1 ; i<=size ; i++)
		{
			for(j=1;j<=2*(size-i);j++)
			{
				System.out.print(" ");
			}
			
			for(k=1;k<=2*i;k++)
			{
				System.out.print(" *");
			}
			System.out.println();
		}
//		for(i=1 ; i<=size ; i++)
//		{
//			for(j=0;j<i;j++)
//			{
//				System.out.print(" ");
//			}
//			
//			for(k=i;k<=size-1;k++)
//			{
//				System.out.print(" *");
//			}
//			System.out.println();
//		}
		
		

	}

}
